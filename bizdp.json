{
  "arch": "react",
  "npm": {
    "command": "npm",
    "registry": "http://registry.npm.sogou"
  },
  "build": {
    "command": "webpack",
    "options": {
      "common": {
        "config": "webpack.config.js"
      },
      "profile": {},
      "dev": {
        "progress": true,
        "display-modules": true
      },
      "qa": {},
      "production": {}
    },
    "before": {
      "clean": "dist"
    },
    "after": {
      "copy": "asset/img dist/asset/img"
    }
  },
  "mock": {
    "suffix": ".action",
    "disabled": false
  },
  "server": {
    "command": "webpack-dev-server",
    "options": {
      "hot": true,
      "colors": true,
      "inline": true,
      "progress": true,
      "host": "0.0.0.0"
    }
  },
  "test": {
    "command": "mocha",
    "options": {
      "no-timeouts": true
    }
  },
  "validate": {
    "command": "eslint",
    "options": {
      "fix": true,
      "ext": ".js,.jsx"
    },
    "src": "src"
  }
}
